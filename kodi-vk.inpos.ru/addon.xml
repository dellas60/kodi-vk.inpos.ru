<?xml version="1.0" encoding="UTF-8"?>
<!-- Основная информация -->
<addon id="kodi-vk.inpos.ru"
version="0.0.1"
name="VK Add-on"
provider-name="inpos">
<!-- Зависимости -->
<requires>
  <import addon="xbmc.python" version="2.1"/>
</requires>
<!-- Тип (назначение) плагина -->
<extension point="xbmc.python.pluginsource" library="default.py">
  <provides>image video audio</provides>
</extension>
<!-- Описание -->
<extension point="xbmc.addon.metadata"> 
  <summary lang="en">Vkontakte for Kodi</summary>
  <summary lang="ru">Vkontakte для Kodi</summary>
  <description lang="en">Addon for getting content from vkontakte(vk.com) social network.</description>
  <description lang="ru">Дополнение для получения содержимого из социальносети ВКонтакте.</description>
  <platform>all</platform> 
</extension>
</addon>